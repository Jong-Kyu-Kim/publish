<script>
    $(window).load(function() {
        $(this).trigger('scroll');
    });

    $(window).resize(function() {
        $(this).trigger('scroll');
    })

    $(function() {
        var $window = $(window);

        $('.tab_menu li').each(function(i) {
            $(this).click(function() {
                $('html').animate({
                    scrollTop: $($('.title')[i]).offset().top - 50
                })
            })
        })

        $('.month').each(function() {
            $(this).height($(this).parent().outerHeight())
        });

        $(window).scroll(function() {
            $('.title, .left, .right').each(function(i) {
                var $this = $(this);

                if ($window.scrollTop() + $window.height() > $this.offset().top) {                    
                    $this.addClass('active')
                    $('.line').height($this.offset().top - $('.line').offset().top + 20)
                }
                else {
                    $this.removeClass('active')
                }
            })
            
        })
    })
